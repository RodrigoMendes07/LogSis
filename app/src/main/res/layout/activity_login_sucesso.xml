<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:alpha="0.4"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bem-vindo, Alberto Sales"
        android:gravity="center_horizontal"
        android:id="@+id/txt_sucesso_nome"
        android:layout_marginTop="258dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="albertosales@mail.com"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:id="@+id/txt_sucesso_email"
        android:layout_below="@+id/txt_sucesso_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/imgclick"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/txt_sucesso_nome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:src="@drawable/ic_face_black_24dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        app:shadow="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/btn_logout"
        android:textColor="#ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/blue_btn_drawable"
        android:layout_below="@+id/txt_sucesso_email"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/txt_sucesso_nome"
        android:layout_alignEnd="@+id/txt_sucesso_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Clique na imagem para fazer upload em seu perfil."
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/txt_sucesso_nome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />
</RelativeLayout>